# Production Environment Variables for HEXA Research Copilot v6.0
# Copy this file to .env.local and add your actual values

# Core API Keys
EXA_API_KEY=your_exa_api_key_here
OPENAI_API_KEY=your_openai_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Application Configuration
NEXT_PUBLIC_APP_NAME=HEXA
NEXT_PUBLIC_APP_VERSION=6.0.0
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app
NEXT_PUBLIC_WS_URL=wss://your-domain.vercel.app

# Environment
NODE_ENV=production

# Optional: Analytics and Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_analytics_id_here
VERCEL_URL=your-domain.vercel.app

# Performance Configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
CACHE_TTL_SEARCH=600000
CACHE_TTL_CITATIONS=1800000
CACHE_TTL_VERIFICATION=900000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000